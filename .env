# Variables de entorno para EcoRewards Backend

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true
API_PREFIX=/api/v1

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=10080
ALGORITHM=HS256

# PostgreSQL Database
POSTGRES_SERVER=postgres
POSTGRES_PORT=5432
POSTGRES_DB=ecorewards
POSTGRES_USER=ecorewards_user
POSTGRES_PASSWORD=secure_password_change_this

# MongoDB
MONGODB_URL=mongodb://mongo:27017
MONGODB_DB=ecorewards_logs

# Redis (for caching and rate limiting)
REDIS_URL=redis://redis:6379

# External Services
QR_SERVICE_URL=http://localhost:8000
AI_VALIDATION_URL=http://localhost:8001

# File Storage
UPLOAD_FOLDER=./uploads
MAX_FILE_SIZE=10485760  # 10MB

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@ecorewards.com

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Environment
ENVIRONMENT=development
